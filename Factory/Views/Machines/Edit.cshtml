@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit Machine</h2>

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.LastMaintenance)
  @Html.EditorFor(model => model.LastMaintenance, new { type="date" })

  @Html.LabelFor(model => model.Location)
  @Html.DropDownList("LocationId")

  @Html.LabelFor(model => model.Status)
  @Html.DropDownList("Status")

  <input type="submit" value="Save" class="btn" />
}

<p>@Html.ActionLink("Cancel", "Details", new { id = Model.MachineId }, new { @class="btn" })</p>