@{
  Layout = "_Layout";
}

@using Factory.Models

<h2>Machines</h2>

@if (Model.Count == 0)
{
  <p>No machines added yet, please add an machine.</p>
}
else
{
  <table class="table-bordered">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Last Maintenance</th>
    </tr>
    @foreach(Machine machine in Model)
    {
      <td>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</td>
      <td>@machine.LastMaintenance</td>
    }
  </table>
}

  @Html.ActionLink("Add Machine", "Create")