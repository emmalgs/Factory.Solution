@{
  Layout = "_Layout";
}

@using Factory.Models

<h2>Engineers</h2>

@if (Model.Count == 0)
{
  <p>No engineers added yet, please add an engineer.</p>
}
else
{
  <table class="table-bordered">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Lisenses</th>
    </tr>
    @foreach(Engineer engineer in Model)
    {
      <td>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</td>
      <td></td>
    }
  </table>
}

  @Html.ActionLink("Add Engineer", "Create")